<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.product.ProductActivity"
    android:background="@color/mainBg">

    <ImageView
        android:id="@+id/imageOfProduct"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/nameOfProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageOfProduct"
        android:text="text"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/unitOfProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nameOfProduct"
        android:text="unit"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="18dp"
        android:textSize="12dp"
        android:textColor="@color/primaryVariant"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/priceOfProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/unitOfProduct"
        android:text="price"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="2dp"
        android:textSize="20dp"
        android:textColor="@color/primaryColor"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/detailTextOfProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/priceOfProduct"
        android:text="detail text"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="14dp"
        android:textSize="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>